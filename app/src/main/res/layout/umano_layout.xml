<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="64dp"
    android:id="@+id/umano_bar"
    android:background="#FAFAFA"
    android:orientation="horizontal">

    <ImageView
        android:layout_marginTop="2dp"
        android:layout_marginStart="2dp"
        android:id="@+id/umano_bar_thumbnail"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:background="#81C784" />

    <TextView
        android:textColor="@android:color/black"
        android:id="@+id/umano_bar_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        android:layout_toEndOf="@+id/umano_bar_thumbnail"
        android:textSize="16sp"
        android:maxLines="1"
        android:layout_toStartOf="@+id/umano_bar_icon"
        tools:text="This is what you came for " />

    <TextView
        android:id="@+id/umano_bar_artist"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/umano_bar_title"
        android:layout_marginStart="10dp"
        android:layout_toEndOf="@id/umano_bar_thumbnail"
        android:textSize="12sp"
        android:layout_toStartOf="@+id/umano_bar_icon"
        tools:text="Calvin Harris, Rihanna" />

    <ImageView
        android:contentDescription="@string/play_pause_button"
        android:layout_marginTop="2dp"
        android:layout_marginEnd="2dp"
        android:id="@+id/umano_bar_icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_alignParentEnd="true"
        android:src="@drawable/ic_pause_black_24dp" />
</RelativeLayout>
